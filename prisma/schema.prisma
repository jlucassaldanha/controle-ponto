generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  username String
  email String @unique
  passwordHash String @map("password_hash")
  config Config?
  punches Punch[]
  initialBalanceMinutes Int @default(0)

  @@map("users")
}

model Justification {
  id String @id @default(uuid())
  date DateTime @db.Date
  reason    String   @default("Abono total")
  
  minutes Int
  userId String
  user User @relation(fields: [userId], references: [id])
  
  @@unique([userId, date])
}

model Config {
  id String @id @default(uuid())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique @map("user_id")

  dailySchedules DailySchedule[]

  @@map("configs")
}

model DailySchedule {
  id String @id @default(uuid())
  dayOfWeek Int @map("day_of_week")
  entryTime Int @map("entry_time")
  exitTime Int @map("exit_time")
  lunchStartTime Int @map("lunch_start_time")
  lunchEndTime Int @map("lunch_end_time")

  configId String @map("config_id")
  config Config @relation(fields: [configId], references: [id], onDelete: Cascade)

  @@unique([configId, dayOfWeek])
  @@map("daily_schedules")
}

enum PunchType {
  CLOCK_IN
  CLOCK_OUT
  START_LUNCH
  END_LUNCH
}

model Punch {
  id String @id @default(uuid())
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @map("user_id")
  timestamp DateTime @default(now())
  type PunchType

  @@map("punches")
}
